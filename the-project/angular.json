{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "yarn"
  },
  "newProjectRoot": "projects",
  "projects": {
    "the-application": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/the-application",
      "sourceRoot": "projects/the-application/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/the-application",
            "index": "projects/the-application/src/index.html",
            "main": "projects/the-application/src/main.ts",
            "polyfills": "projects/the-application/src/polyfills.ts",
            "tsConfig": "projects/the-application/tsconfig.app.json",
            "aot": true,
            "assets": [
              "projects/the-application/src/favicon.ico",
              "projects/the-application/src/assets"
            ],
            "styles": [
              "projects/the-application/src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/the-application/src/environments/environment.ts",
                  "with": "projects/the-application/src/environments/environment.prod.ts"
                }
              ],
              "buildOptimizer": true,
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false
            },
            "development": {
              "vendorChunk": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "the-application:build:production"
            },
            "development": {
              "browserTarget": "the-application:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "the-application:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/the-application/src/test.ts",
            "polyfills": "projects/the-application/src/polyfills.ts",
            "tsConfig": "projects/the-application/tsconfig.spec.json",
            "karmaConfig": "projects/the-application/karma.conf.js",
            "assets": [
              "projects/the-application/src/favicon.ico",
              "projects/the-application/src/assets"
            ],
            "styles": [
              "projects/the-application/src/styles.css"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/the-application/tsconfig.app.json",
              "projects/the-application/tsconfig.spec.json",
              "projects/the-application/e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "projects/the-application/e2e/protractor.conf.js"
          },
          "configurations": {
            "production": {
              "devServerTarget": "the-application:serve:production"
            },
            "development": {
              "devServerTarget": "the-application:serve:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    },
    "the-library": {
      "projectType": "library",
      "root": "projects/the-library",
      "sourceRoot": "projects/the-library/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/the-library/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/the-library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/the-library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/the-library/src/test.ts",
            "tsConfig": "projects/the-library/tsconfig.spec.json",
            "karmaConfig": "projects/the-library/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/the-library/tsconfig.lib.json",
              "projects/the-library/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "the-application"
}
